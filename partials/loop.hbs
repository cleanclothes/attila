<div class="extra-pagination">
	{{pagination}}
</div>

{{#foreach posts}}

<article class="{{post_class}}">
	<div class="inner">
		<header class="post-header">
			{{#if feature_image}}<div style="background-image: url('{{feature_image}}');"></div>{{/if}}
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>

			<div class="clear"></div>
		</header>

		<section class="post-excerpt">
			<p>{{excerpt}}&hellip;</p>
		</section>
	</div>
</article>

{{/foreach}}


